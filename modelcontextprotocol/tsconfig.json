{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "build-dxt.js"],
  "exclude": ["node_modules", "__tests__", "**/*.test.ts"]
}
